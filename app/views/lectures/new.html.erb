



<h2  class="page-title">Agregar Asignatura</h2>

<%= render "lectures/new_mini_header" %>	
  


<div class="form-for-new">

<%= form_for @lecture do |f| %>


	<%= f.hidden_field :year, value: Date.today.year %>

	<%= f.label :periodo %>
  <%= f.select(:period, [["Invierno", 1], ["Verano", 2], ["OtoÃ±o", 3]]) %>

  
  <%= f.label :asignatura %>
  <span class="program-field">
  <%= select(:lecture, :course_id, @courses.collect {|c| [ c.name, c.id ] }) %>
  </span>

	<%= f.label :dia %>
	<%= select(:lecture, :week_day, [["Lunes", 1], ["Martes", 2], ["Miercoles", 3], ["Jueves", 4], ["Viernes", 5], ["Sabado", 6]]) %>

	<%= f.label :hora %>
	<%= f.time_select :lecture_start_time, {:minute_step => 30, ampm: true} %>
  <span class="submit-field">
	<%= f.submit "Crear Asignatura"%>
	  <span>

	<% end %>

</div>

  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

  <% if flash[:alert] %>
  <div class="error"><%= flash[:alert] %></div>
	<% end %>
