<h1>Agregar Clase</h1>

<div>

<%= form_for @lecture do |f| %>

	<%= f.label :period %>
  <%= f.select(:period, [["Invierno", 1], ["Verano", 2], ["Otono", 3]]) %>

  <%= f.label :course_id %>
  <%= select(:lecture, :course_id, @courses.collect {|c| [ c.name, c.id ] }) %>

	<%= f.label :week_day %>
	<%= select(:lecture, :week_day, [["Lunes", 1], ["Martes", 2], ["Miercoles", 3], ["Jueves", 4], ["Viernes", 5], ["Sabado", 6]]) %>

	<%= f.label :lecture_start_time %>
	<%= f.time_select :lecture_start_time, {:minute_step => 30, ampm: true} %>

	<%= f.submit %>
	<% end %>

</div>

